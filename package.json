{
  "name": "unit-test-generator",
  "displayName": "Unit Tests Generator",
  "publisher": "adoshsingh",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "unitTestGen.generateTests",
        "title": "Generate Unit Tests"
      },
      {
        "command": "unitTestGen.setup",
        "title": "Setup Unit Test Generator"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "unitTestGen.generateTests",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Unit Test Generator Configuration",
      "properties": {
        "unitTestGen.llmModel": {
          "type": "string",
          "default": "gpt-4",
          "enum": [
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "enumDescriptions": [
            "OpenAI - GPT-4"
          ],
          "description": "LLM model version used to generate tests"
        },
        "unitTestGen.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key to use the model"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@langchain/core": "^1.0.1",
    "@langchain/openai": "^1.0.0"
  }
}
